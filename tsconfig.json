{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["assets/js/*"]
    }
  },
  "include": ["assets/js/**/*.ts", "assets/js/**/*.tsx", "assets/js/**/*.d.ts"]
}
